{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "colcon: build workspace (Debug)",
            "type": "shell",
            "command": "colcon build --symlink-install --event-handlers console_direct+ --cmake-args -DCMAKE_BUILD_TYPE=Debug -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build workspace (Debug)"
        },
        {
            "label": "colcon: build workspace (Release)",
            "type": "shell",
            "command": "colcon build --symlink-install --event-handlers console_direct+ --cmake-args -DCMAKE_BUILD_TYPE=RelWithDebInfo -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build workspace (Release)"
        },
        {
            "label": "colcon: build package (Debug)",
            "type": "shell",
            "command": "colcon build --symlink-install --event-handlers console_direct+ --packages-select ${input:package} --cmake-args -DCMAKE_BUILD_TYPE=Debug -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build package (Debug)"
        },
        {
            "label": "colcon: build package (Release)",
            "type": "shell",
            "command": "colcon build --symlink-install --event-handlers console_direct+ --packages-select ${input:package} --cmake-args -DCMAKE_BUILD_TYPE=RelWithDebInfo -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build package (Release)"
        },
        {
            "label": "colcon: clean workspace",
            "type": "shell",
            "command": "rm -rf build install log",
            "group": "build",
            "problemMatcher": [],
            "detail": "Delete build/install/log directories",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        }
    ],
    "inputs": [
        {
            "id": "package",
            "type": "promptString",
            "description": "Package name",
            "default": ""
        }
    ]
}